{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NPC Data Schema",
  "type": "object",
  "properties": {
    "npcs": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*$": {
          "$ref": "#/definitions/npc"
        }
      }
    },
    "baseNPCLocations": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*$": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "npcMovementRules": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*$": {
          "$ref": "#/definitions/movementRule"
        }
      }
    }
  },
  "definitions": {
    "npc": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "likesNoble": {
          "type": "boolean"
        },
        "dialogue": {
          "type": "object",
          "properties": {
            "noble": {
              "$ref": "#/definitions/dialogueTree"
            },
            "common": {
              "$ref": "#/definitions/dialogueTree"
            }
          }
        }
      },
      "required": ["id", "name", "description", "likesNoble", "dialogue"]
    },
    "dialogueTree": {
      "type": "object",
      "properties": {
        "initial": {
          "$ref": "#/definitions/dialogue"
        },
        "return": {
          "$ref": "#/definitions/dialogue"
        },
        "archive": {
          "$ref": "#/definitions/dialogue"
        },
        "greenhouse": {
          "$ref": "#/definitions/dialogue"
        }
      },
      "required": ["initial"]
    },
    "dialogue": {
      "type": "object",
      "properties": {
        "greeting": {
          "type": "string"
        },
        "choices": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/dialogueChoice"
          }
        },
        "requires": {
          "type": "string"
        }
      },
      "required": ["greeting", "choices"]
    },
    "dialogueChoice": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "response": {
          "type": "string"
        },
        "unlocks": {
          "type": "string"
        },
        "requires": {
          "type": "string"
        },
        "requires_not": {
          "type": "string"
        },
        "quest_action": {
          "type": "string"
        },
        "effects": {
          "type": "object"
        },
        "next_choices": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/dialogueChoice"
          }
        }
      },
      "required": ["id", "text", "response"]
    },
    "movementRule": {
      "type": "object",
      "properties": {
        "baseLocation": {
          "type": "string"
        },
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "condition": {
                "type": "string"
              },
              "location": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}