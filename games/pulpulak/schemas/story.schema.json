{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Story Data Schema",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z_][a-zA-Z0-9_]*$": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the scene"
        },
        "text": {
          "type": "string",
          "description": "Main text content of the scene"
        },
        "location": {
          "type": "string",
          "description": "Location ID where this scene takes place"
        },
        "choices": {
          "type": "object",
          "properties": {
            "princess": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/choice"
              }
            },
            "helper": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/choice"
              }
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["title", "text", "location", "choices"],
      "additionalProperties": false
    }
  },
  "definitions": {
    "choice": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the choice"
        },
        "text": {
          "type": "string",
          "description": "Text displayed to the player"
        },
        "description": {
          "type": "string",
          "description": "Additional description of the choice"
        },
        "resultText": {
          "type": "string",
          "description": "Text shown after making this choice"
        },
        "nextScene": {
          "type": "string",
          "description": "ID of the next scene to transition to"
        }
      },
      "required": ["id", "text"],
      "additionalProperties": false
    }
  }
}