{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Location Data Schema",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z_][a-zA-Z0-9_]*$": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Display name of the location"
        },
        "description": {
          "type": "string", 
          "description": "Description of the location"
        },
        "connections": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Array of location IDs that can be reached from here"
        },
        "canChangeOutfit": {
          "type": "boolean",
          "description": "Whether players can change outfits in this location"
        },
        "icon": {
          "type": "string",
          "description": "Emoji icon representing this location"
        }
      },
      "required": ["name", "description", "connections", "canChangeOutfit", "icon"],
      "additionalProperties": false
    }
  }
}